//- project {name, progress, status, created_by}
form(role="form", method="post", action="/admin_panel/projects/new").form-horizontal
	.form-group
		label(for="name").control-label.col-md-3 Nombre
		.col-md-5
			input(id="name", placeholder="Nombre", type="text", name="name", value=(project.name ? project.name : "")).form-control

	-if (project.progress)
		.form-group
			label(for="progress").control-label.col-md-3 Progreso (%)
			.col-md-5
				input(id="progress", type="number", min="0", max="100", name="progress", value=project.progress, width="4.8em").form-control
				.progress
					div(id="progress_" + projects[i].id role="progressbar", aria-valuenow= project.progress, aria-valuemin="0", aria-valuemax="100", style="width: " + projects.progress + "%").progress-bar.progress-bar-info

	.form-group
		label(for="role").control-label.col-md-3 Estado
		.col-md-5
			select(id="role", name="role").form-control
				- for (var i = 0; i < statuses.length ; i++)
					option(selected=((project.status ? ((project.status == statuses[i]) ? true : false) : (i == 0 ? true : false))), value=i)= statuses[i]

	.form-group
		label(for="users").control-label.col-md-3 Usuarios
		.col-md-5
			select(id="users", type="text", multiple, data-placeholder="Usuarios", name="users").form-control
				- for(var i = 0; i < users.length; i++)
					option(value=users[i].id)= users[i].username
			.help-block Usuarios que tendrÃ¡n acceso a ver los objetos del proyecto

	.form-group
		.col-md-offset-3.col-md-5
			button(type="submit").btn.btn-primary Guardar
			&nbsp;
			a(href="/admin_panel/users") Cancelar

script(src="/js/project_form.js", async)
