extends layout

block content
	.well(style="max-width: 700px; margin: 2em auto")
		h1 Prototipo - Home
		form(role="form", ).form-horizontal
			.form-group
				label(for="input_username_email").control-label.col-sm-4
					| Email / Username
				.col-sm-8
					input(type="text", placeholder="Email / Username", id="input_username_email", name="email-username", required, autofocus).form-control
			.form-group
				label(for="input_password").control-label.col-sm-4
					| Contraseña
				.col-sm-8
					input(type="password", placeholder="Password" id="input_password", name="password", required).form-control
			.form-group
				.col-sm-offset-4.col-sm-8
					.checkbox
						label
							input(type="checkbox")
							| Recordarme
			.form-group
				.col-sm-offset-4.col-sm-8
					button(type="submit").btn.btn-primary Iniciar Sesión

	script(src="/js/cookies.js")
